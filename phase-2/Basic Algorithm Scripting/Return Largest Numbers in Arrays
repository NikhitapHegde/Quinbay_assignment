function largestOfFour(arr) {
  let maxelements=[];
  for (let i=0;i<arr.length;i++){
    let maxele=arr[i][0];
    for (let j=0;j<arr[0].length;j++){
        if (arr[i][j] > maxele) {
        maxele = arr[i][j];
      }
    }
      maxelements.push(maxele);
    }

  
  return maxelements;
}

largestOfFour([[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]);
